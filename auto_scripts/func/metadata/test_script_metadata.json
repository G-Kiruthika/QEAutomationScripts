{
  "test_scripts": [
    {
      "test_case_id": "508",
      "test_case_description": "Test Case TC_LOGIN_008",
      "flow": [
        {
          "step_id": 1,
          "action": "navigate_to_login",
          "expected": "Login page is displayed"
        },
        {
          "step_id": 2,
          "action": "enter_username",
          "test_data": {"username": ""},
          "expected": "Username field remains blank"
        },
        {
          "step_id": 3,
          "action": "enter_password",
          "test_data": {"password": "ValidPass123!"},
          "expected": "Password is entered"
        },
        {
          "step_id": 4,
          "action": "click_login",
          "expected": "Validation error displayed: 'Username is required'"
        },
        {
          "step_id": 5,
          "action": "get_validation_error",
          "expected": "Login request is not submitted, user remains on login page"
        }
      ],
      "test_data": {
        "url": "https://ecommerce-website.com/login",
        "username": "",
        "password": "ValidPass123!"
      }
    },
    {
      "test_case_id": "510",
      "test_case_description": "Test Case TC_LOGIN_010",
      "flow": [
        {
          "step_id": 1,
          "action": "navigate_to_login",
          "expected": "Login page is displayed"
        },
        {
          "step_id": 2,
          "action": "enter_username",
          "test_data": {"username": "validuser@example.com"},
          "expected": "Credentials are entered"
        },
        {
          "step_id": 2,
          "action": "enter_password",
          "test_data": {"password": "WrongPass1"},
          "expected": "Credentials are entered"
        },
        {
          "step_id": 3,
          "action": "click_login",
          "repeat": 5,
          "test_data": {
            "attempts": [
              {"password": "WrongPass1"},
              {"password": "WrongPass2"},
              {"password": "WrongPass3"},
              {"password": "WrongPass4"},
              {"password": "WrongPass5"}
            ]
          },
          "expected": "Each attempt fails with error message"
        },
        {
          "step_id": 4,
          "action": "enter_password",
          "test_data": {"password": "ValidPass123!"},
          "expected": "Account is locked, error message displayed: 'Account locked due to multiple failed attempts. Please try again after 30 minutes or reset password'"
        },
        {
          "step_id": 4,
          "action": "click_login",
          "expected": "Account is locked, error message displayed"
        },
        {
          "step_id": 5,
          "action": "verify_account_lockout_notification",
          "expected": "Email notification sent to user about account lockout"
        }
      ],
      "test_data": {
        "url": "https://ecommerce-website.com/login",
        "username": "validuser@example.com",
        "password_attempts": ["WrongPass1", "WrongPass2", "WrongPass3", "WrongPass4", "WrongPass5", "ValidPass123!"]
      }
    }
  ],
  "framework": {
    "dependencies": [
      "BasePage",
      "core/driver_factory.py",
      "core/selenium_wrapper.py",
      "config/config.yaml",
      "selenium",
      "pytest",
      "pyyaml",
      "pages",
      "core.driver_factory",
      "pages.base_page",
      "utils/send_email_report.py"
    ]
  }
}
