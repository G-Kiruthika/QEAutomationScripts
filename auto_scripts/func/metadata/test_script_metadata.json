          "acceptance_criteria": "AC_LOGIN_008"
        },
        {
          "action": "enter_password",
          "test_data": {"password": "ValidPass123!"},
          "validation": "password_entered",
          "acceptance_criteria": "AC_LOGIN_008"
        },
        {
          "action": "click_login",
          "validation": "error_message_displayed",
          "expected": "Username is required",
          "acceptance_criteria": "AC_LOGIN_008"
        },
        {
          "action": "verify_login_blocked",
          "validation": "login_page_displayed",
          "acceptance_criteria": "AC_LOGIN_008"
        }
      ]
    },
    {
      "testCaseId": "510",
      "testCaseDescription": "Test Case TC_LOGIN_010",
      "page": "LoginPage",
      "steps": [
        {
          "action": "navigate_to_login",
          "validation": "login_page_displayed",
          "test_data": {"url": "https://ecommerce-website.com/login"},
          "acceptance_criteria": "AC_LOGIN_010"
        },
        {
          "action": "enter_username",
          "test_data": {"username": "validuser@example.com"},
          "validation": "field_filled",
          "acceptance_criteria": "AC_LOGIN_010"
        },
        {
          "action": "enter_password",
          "test_data": {"password": "WrongPass1"},
          "validation": "password_entered",
          "acceptance_criteria": "AC_LOGIN_010"
        },
        {
          "action": "click_login",
          "validation": "error_message_displayed",
          "expected": "Invalid credentials",
          "acceptance_criteria": "AC_LOGIN_010",
          "repeat": 5,
          "repeat_test_data": [
            {"password": "WrongPass1"},
            {"password": "WrongPass2"},
            {"password": "WrongPass3"},
            {"password": "WrongPass4"},
            {"password": "WrongPass5"}
          ]
        },
        {
          "action": "enter_password",
          "test_data": {"password": "ValidPass123!"},
          "validation": "password_entered",
          "acceptance_criteria": "AC_LOGIN_010"
        },
        {
          "action": "click_login",
          "validation": "verify_account_lockout_message",
          "expected": "Account locked due to multiple failed attempts. Please try again after 30 minutes or reset password",
          "acceptance_criteria": "AC_LOGIN_010"
        },
        {
          "action": "verify_account_lockout_notification",
          "validation": "account_lockout_notification",
          "acceptance_criteria": "AC_LOGIN_010"
        }
      ]
    }
  ],
  "framework": {
    "dependencies": [
      "selenium",
      "pytest",
      "email_validator",
      "ecosystem_sync"
    ],
    "ecosystem_sync": {
      "enabled": true,
      "required": [
        "page_object_layer",
        "metadata_validator",
        "error_handler",
        "git_integration"
      ]
    }
  }
}