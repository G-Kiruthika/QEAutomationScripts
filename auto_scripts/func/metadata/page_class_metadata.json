{
  "pages": [
    {
      "class_name": "LoginPage",
      "file_name": "login_page.py",
      "actions": [
        {
          "name": "navigate_to_login",
          "type": "navigation",
          "locator": "url",
          "locator_value": "https://ecommerce-website.com/login",
          "description": "Navigates to the login page"
        },
        {
          "name": "enter_username",
          "type": "input",
          "locator": "username_input",
          "locator_value": "//input[@name='username']",
          "description": "Enters the username"
        },
        {
          "name": "enter_password",
          "type": "input",
          "locator": "password_input",
          "locator_value": "//input[@name='password']",
          "description": "Enters the password"
        },
        {
          "name": "click_login",
          "type": "click",
          "locator": "login_button",
          "locator_value": "//button[@type='submit']",
          "description": "Clicks the login button"
        },
        {
          "name": "get_validation_error",
          "type": "get_text",
          "locator": "validation_error",
          "locator_value": "//div[@class='error-message']",
          "description": "Retrieves the validation error message"
        },
        {
          "name": "verify_account_lockout_notification",
          "type": "verify",
          "locator": "account_lockout_notification",
          "locator_value": "//div[@class='lockout-notification']",
          "description": "Verifies the account lockout notification display"
        }
      ],
      "error_handling": [
        {
          "type": "email_notification",
          "trigger": "account_lockout",
          "handler": "send_email_report",
          "description": "Send email notification when account is locked"
        }
      ]
    }
  ]
}
