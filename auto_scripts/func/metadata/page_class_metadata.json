{
  "LoginPage": {
    "class_name": "LoginPage",
    "file_name": "login_page.py",
    "locators": {
      "email_field": "//input[@type='email']",
      "password_field": "//input[@type='password']",
      "login_button": "//button[@type='submit']",
      "error_message": "//div[contains(@class,'error-message')]",
      "user_header": "//header//span[@class='user-name']",
      "session_token": "//meta[@name='session-token']"
    },
    "actions": [
      "navigate_to_login_page",
      "enter_email",
      "enter_password",
      "click_login_button"
    ],
    "validations": [
      "is_login_page_displayed",
      "is_email_accepted",
      "is_password_accepted",
      "is_user_authenticated",
      "is_error_message_displayed",
      "is_session_token_generated",
      "is_user_header_displayed",
      "is_still_on_login_page"
    ]
  },
  "DashboardPage": {
    "class_name": "DashboardPage",
    "file_name": "dashboard_page.py",
    "locators": {
      "user_header": "//header//span[@class='user-name']",
      "dashboard_main": "//div[@id='dashboard-main']"
    },
    "actions": [
      "verify_user_session"
    ],
    "validations": [
      "is_dashboard_displayed",
      "is_user_header_displayed"
    ]
  }
}
