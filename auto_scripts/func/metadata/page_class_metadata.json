{
  "pages": {
    "LoginPage": {
      "url": "https://ecommerce-website.com/login",
      "locators": {
        "username_field": {
          "type": "input",
          "strategy": "by_name_or_id",
          "validation": "blank_allowed"
        },
        "password_field": {
          "type": "input",
          "strategy": "by_name_or_id"
        },
        "login_button": {
          "type": "button",
          "strategy": "by_text_or_id"
        },
        "validation_error": {
          "type": "message",
          "strategy": "by_text",
          "text_variants": ["Username is required", "Account locked due to multiple failed attempts. Please try again after 30 minutes or reset password"]
        }
      },
      "actions": {
        "navigate_to_login": {
          "url": "https://ecommerce-website.com/login"
        },
        "enter_username": {
          "field": "username_field"
        },
        "enter_password": {
          "field": "password_field"
        },
        "click_login": {
          "element": "login_button"
        },
        "verify_error_message": {
          "element": "validation_error",
          "expected_text": "Username is required"
        },
        "verify_account_lockout_message": {
          "element": "validation_error",
          "expected_text": "Account locked due to multiple failed attempts. Please try again after 30 minutes or reset password"
        },
        "verify_login_blocked": {
          "condition": "user_remains_on_login_page"
        }
      },
      "validations": {
        "login_page_displayed": {
          "condition": "url_matches",
          "url": "https://ecommerce-website.com/login"
        },
        "username_blank": {
          "condition": "field_empty",
          "field": "username_field"
        },
        "password_entered": {
          "condition": "field_filled",
          "field": "password_field"
        },
        "error_message_displayed": {
          "condition": "element_text",
          "element": "validation_error"
        },
        "account_lockout_notification": {
          "condition": "email_sent",
          "recipient": "user"
        }
      }
    }
  }
}