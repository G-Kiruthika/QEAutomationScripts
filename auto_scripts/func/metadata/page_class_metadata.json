{
  "pages": [
    {
      "class_name": "RegistrationPage",
      "file_name": "registration_page.py",
      "base_class": "BasePage",
      "locators": {
        "email_field": "//input[@id='email']",
        "name_field": "//input[@id='name']",
        "password_field": "//input[@id='password']",
        "register_button": "//button[@id='register']",
        "error_message": "//div[@class='error-message']"
      },
      "actions": [
        "enter_email(email)",
        "enter_name(name)",
        "enter_password(password)",
        "click_register()"
      ],
      "validations": [
        "validate_error_message(expected_message)",
        "validate_registration_failed()"
      ]
    }
  ]
}