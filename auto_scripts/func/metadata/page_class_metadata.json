{
  "pages": {
    "LoginPage": {
      "file_name": "login_page.py",
      "locators": {
        "username_field": {"by": "placeholder", "value": "locator_placeholder_username_field"},
        "password_field": {"by": "placeholder", "value": "locator_placeholder_password_field"},
        "login_button": {"by": "placeholder", "value": "locator_placeholder_login_button"},
        "validation_error": {"by": "placeholder", "value": "locator_placeholder_validation_error"}
      },
      "actions": [
        "navigate_to_login_page()",
        "enter_username(username)",
        "enter_password(password)",
        "click_login_button()"
      ],
      "validations": [
        "is_login_page_displayed()",
        "is_username_blank()",
        "is_password_entered()",
        "is_validation_error_displayed()",
        "is_login_prevented()",
        "is_account_locked()",
        "is_account_lockout_notification_sent()"
      ]
    }
  }
}